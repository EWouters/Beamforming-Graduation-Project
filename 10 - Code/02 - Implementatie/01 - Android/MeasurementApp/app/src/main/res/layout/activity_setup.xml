<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
	android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SetupActivity">


	<!-- service status -->
	<TextView android:id="@+id/uid_label"
		android:text="@string/uid_label"
		android:layout_width="150dp"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:textSize="20sp"
		android:layout_height="22sp" />

	<TextView android:id="@+id/uid_display"
		android:layout_width="0dp"
		android:layout_toRightOf="@+id/uid_label"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:textSize="20sp"
		android:layout_height="22sp" />

	<!-- host and port -->
	<EditText android:id="@+id/host_field"
		android:hint="@string/host"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_below="@+id/uid_label"
		android:layout_toLeftOf="@+id/port_field"
		android:layout_alignBaseline="@+id/port_field"
		android:layout_alignParentLeft="true"
		android:inputType="text" />

	<EditText android:id="@+id/port_field"
		android:hint="@string/port"
		android:layout_width="96dp"
		android:layout_height="wrap_content"
		android:layout_below="@+id/uid_label"
		android:layout_alignParentRight="true"
		android:inputType="number" />


</RelativeLayout>
